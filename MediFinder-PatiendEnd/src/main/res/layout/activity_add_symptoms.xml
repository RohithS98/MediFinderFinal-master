<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@drawable/hosp"
    tools:context=".addSymptoms">

    <Button
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/symps"
        android:layout_marginTop="-5dp"
        android:width="40dp"
        android:height="50dp"
        android:background="@drawable/images"
        android:layout_centerHorizontal="true"
        android:onClick="goToSymptoms" />

    <EditText
        android:id="@+id/symps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="Symptoms"
        android:inputType="textMultiLine"
        android:lines="10"
        android:minLines="4" />

    <Button
        android:id="@+id/processData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:onClick="retreiveToken"
        android:text="GET SPECIALIST" />

    <EditText
        android:id="@+id/results"
        android:layout_width="323dp"
        android:layout_height="325dp"
        android:layout_below="@+id/change"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="issues and Specialisation"
        android:textColor="#000000"
        android:enabled="false"
        android:inputType="textMultiLine" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/change"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="17dp"
        android:text="ADD SYMPTOMS" />

</RelativeLayout>