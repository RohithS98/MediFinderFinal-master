<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".addSymptoms">

    <Button
        android:id="@+id/change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/symps"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:onClick="goToSymptoms"
        android:text="Add Symptoms" />

    <EditText
        android:id="@+id/symps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:ems="10"
        android:hint="Symptoms"
        android:inputType="textMultiLine"
        android:lines="10"
        android:minLines="4" />

    <Button
        android:id="@+id/processData"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/results"
        android:layout_marginTop="12dp"
        android:layout_centerHorizontal="true"
        android:onClick="retreiveToken"
        android:text="Get Token" />

    <EditText
        android:id="@+id/results"
        android:layout_width="323dp"
        android:layout_height="325dp"
        android:layout_below="@+id/change"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:hint="issues and Specialisation"
        android:inputType="textMultiLine" />

</RelativeLayout>